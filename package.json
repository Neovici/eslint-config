{
  "name": "@neovici/eslint-config",
  "version": "1.2.1",
  "description": "ESLint configuration for Neovici packages",
  "homepage": "https://github.com/Neovici/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/Neovici/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neovici/eslint-config.git"
  },
  "license": "Apache-2.0",
  "author": "Neovici dev",
  "main": "index.js",
  "files": [
    "index.js",
    "test-config.js"
  ],
  "scripts": {
    "test": "eslint *.js"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "branch": "master"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "husky": "^4.2.5",
    "semantic-release": "^17.0.4"
  }
}
